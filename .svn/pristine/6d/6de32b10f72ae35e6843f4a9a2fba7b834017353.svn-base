@charset "UTF-8";

.hide{display:none;}
.content{padding-top:50px}
.centerContent {width:680px;margin:0 auto;padding-top:50px;}
.titleCenter {text-align:center;}
.contentBox {height:300px; overflow: auto;}
.loginStyle {width:360px;}
.loginStyle h1{text-align:center; margin-bottom:52px;}
.editBtn, .editEndBtn, .deleteBtn {color:#fff; margin-right:8px;padding: 6px 12px;border-radius:4px}
.dateText{color:rgb(174, 174, 174)}
/* .eventBlock {display:none;} */

.viewCount {
	color:#b2b2b2;
	font-size:16px;
}

.loginStyle .form-label {
    
    margin-bottom: 2px;
}

.loginStyle .form-control {
	margin-bottom:26px;
}

.boxIcon {
	font-size:24px;
	
}

.boxIconPadding{
	padding: 5px 5px 0px 5px;
}

.styleBtn, .followBtn {
	background: #0d6efd;
    color: #fff;
    border: 0;
    padding: 5px 5px 0px 5px;
    border-radius: 0.25rem;
    
}

.styleBtn span {
	font-size: 18px;
    display: block;
    float: right;
    margin-top: 2px;
    margin-left: 7px;
}

/* .commentItem {
	display:none;
} */

#load {
	display:block;
	height:100px;
	text-align:center;
	line-height:50px;
}

#followBtn {
	float:left;
}

#followBtn .bx{
	font-size: 22px;
    float: left;
    margin: 0 8px 8px;
}

.followText {
	display:block;
	padding: 0 8px;
	float:left;
}

.clearBoth:after{
	content:'';
	display:block;
	clear:both;
}
.followText span {
    line-height: 37px;
}

.boardBtn {
	display: block;
    float: right;
    padding-bottom: 2px;
    width: 100%;
    text-align: right;
}

.profileImgStyle{
	border: 4px solid #b8b8f1;
    height: 360px;
    width: 360px;
    border-radius: 10px;
    margin-bottom: 12px;
}

.miniProfileImgStyle{
	border: 4px solid #b8b8f1;
    height: 160px;
    width: 160px;
    border-radius: 500px;
    margin-bottom: 12px;
    float: left;
    margin-right: 34px;
}
.profileImgStyle img{
	width: 100%;
  	height: 100%;
 	object-fit: cover;
	
}
.miniProfileImgStyle img{
	width: 100%;
  	height: 100%;
 	object-fit: cover;
 	border-radius: 500px;
	
}

.profileText{
	padding-top:20px;
}

.replyProfileImg{
	width: 50px;
	height: 50px;
	border:2px solid #b8b8f1;
	border-radius:500px;
	margin-right:10px;
	float:left;
}

.replyProfileImg img{
	width:100%;
	height:100%;
	border-radius:500px;
	object-fit:cover;
}

.replyProfileId{
	font-weight:900;
}